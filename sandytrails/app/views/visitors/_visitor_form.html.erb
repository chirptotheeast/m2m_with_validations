
<%= render partial: "shared/error_list", locals: {new_object: @visitor} %>

<%= form_for @visitor do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%><br>
<br>
    <%= f.label :age%>
    <%= f.number_field :age%><br>
<br>
    <%= f.label :city%>
    <%= f.text_field :city%><br>
<br>
    <%= f.label :mermaid_descendant%>
    <%= f.select :mermaid_descendant, [true, false]%><br>
    <br>
    <%= f.submit 'Add Visitor'%>
<% end %>

<%= link_to 'Go Back', visitors_path%>